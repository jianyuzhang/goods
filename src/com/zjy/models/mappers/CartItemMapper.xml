    <select id="selectAllCarts" resultMap="CartMap">
      select * from t_cartitem t
      <where>
      <if test="uid != null">
       AND t.uid = #{uid}
       </if>
      </where>
    </select>
    <select id="selectSomeCartQunaty" resultMap="CartMap">
      select * from t_cartitem t
      <where>
      <if test="uid != null">
